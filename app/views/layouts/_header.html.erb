<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Shop180</h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <%= link_to 'Products', products_path, class: "p-2 my-md-0 mr-md-3" %>
  </nav>
  <% if user_signed_in? %>
    <nav class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= current_user.email %>
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <%= link_to 'Edit profile', edit_user_registration_path, class: 'dropdown-item' %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
      </div>
    </nav>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, class: 'mr-2 btn btn-outline-primary' %>
    <%= link_to "Login", new_user_session_path, class: 'mr-2 btn btn-outline-primary' %>
  <% end %>
</div>
